{
    "version": 2,
    "builds": [
      {
        "src": "api/**/*.py",
        "use": "@vercel/python"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "api/$1"
      }
    ],
    "env": {
      "PYTHON_VERSION": "3.9"
    },
    "functions": {
      "api/**/*.py": {
        "memory": 1024,
        "maxDuration": 30
      }
    }
  }
  